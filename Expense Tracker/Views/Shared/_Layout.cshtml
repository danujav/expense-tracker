<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Expense_Tracker.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="d-flex">
        <partial name="_SideBar" />

        <!-- Main Content Area -->
        <div class="flex-grow-1">
            <!-- Header -->
            @*
            <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Expense_Tracker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
            asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
            asp-action="Privacy">Privacy</a>
            </li>
            </ul>
            </div>
            </div>
            </nav>
            </header>
            *@
            <!-- Main content and body -->
            <div class="container mt-5">
                <main role="main" class="pb-3">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <div class="row justify-content-between">
                                <div class="col-md-8">
                                    <h3 class="fx-bold">@ViewData["PageTitle"]</h3>
                                </div>
                                <div class="col-md-4">
                                    @if (ViewData["PageAction"] != null)
                                    {
                                        <a asp-action="CreateOrEdit"
                                            class="btn btn-md btn-primary">@ViewData["PageAction"]</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @RenderBody()
                </main>
            </div>

            <!-- Footer -->
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2024 - Expense_Tracker - <a asp-area="" asp-controller="Home"
                        asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
